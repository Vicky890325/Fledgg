<div class="onboarding-bar">
	<div class="bar-content">
		<div class="onboarding-header">Setup your profile.</div>
		<div class="onboardig-text">
			We've populated your profile based on info from your Linkedin profile.<br> Feel free to make any changes or click next if everything looks okay.
		</div>

		<div class="next-button">
			Next
		</div>
	</div>

</div>
<div id="profile-content" class="onboarding">
	<div id="content-left">
		<div id="profile-cover">
			<%= image_tag @user.profile_pic_url, :class => "profile-main-pic" %>
			<div class="profile-text-box">
				<div id="name" class="profile-text"><%= @user.name %></div>
				<div id="tagline" class="profile-text"><%= best_in_place @user, :tagline, type: :input, place_holder: "" %> </div>
				<div id="location" class="profile-text"><%= best_in_place @user, :location, type: :input, place_holder: "" %> </div>
			</div>
		</div>
		<div class="field-header">
			Expertise <%= image_tag 'edit.svg', :class => "edit-svg edit-skill" %>
		</div>
		<div class="field-row hidden">
			<%= form_tag skills_path, id: "skill-form", remote: true do %>
				<%= text_field_tag :skill_name, nil, :class => "skill-name", placeholder: "Type a skill, press enter to add" %>
			<% end %>
		</div>
		<div class="field-row">
			<% @skills.each do |skill| %>
				<div class="skill have" id="<%= "s-#{skill.id}" %>"><%= skill.name %>,&nbsp</div>
			<% end %>
		</div>
		<div class="field-header">
			Bio <%= image_tag 'edit.svg', :class => "edit-svg" %>
		</div>
		<div class="field-row">
			<%= best_in_place @user, :bio, type: :input, place_holder: "" %> 
		</div>
		<div class="field-header">
			Info <%= image_tag 'edit.svg', :class => "edit-svg" %>
		</div>
		<div class="field-row">
			<%= best_in_place @user, :info, type: :input, place_holder: "Share a link to your current project (Dropbox, Website, Google Drive)" %>  
		</div>
		<div class="field-row misc">
			<div class="misc-field">
				<div class="field-label">Birthday <%= image_tag 'edit.svg', :class => "edit-svg" %></div>
				<div class="field-value"><%= best_in_place @user, :birthday, type: :input, place_holder: "" %> </div>
			</div>
			<div class="misc-field">
				<div class="field-label">Interest <%= image_tag 'edit.svg', :class => "edit-svg" %></div>
				<div class="field-value"><%= best_in_place @user, :interests, type: :input, place_holder: "" %> </div>
			</div>
			<div class="misc-field">
				<div class="field-label">Star Sign <%= image_tag 'edit.svg', :class => "edit-svg" %></div>
				<div class="field-value"><%= best_in_place @user, :star_sign, type: :input, place_holder: "" %> </div>
			</div>
			<div class="misc-field">
				<div class="field-label">Personality Type <%= image_tag 'edit.svg', :class => "edit-svg" %></div>
				<div class="field-value"><%= best_in_place @user, :personality, type: :input, place_holder: "" %></div>
			</div>
			<div class="misc-field">
				<div class="field-label">Favorite Book <%= image_tag 'edit.svg', :class => "edit-svg" %></div>
				<div class="field-value"><%= best_in_place @user, :favorite_book, type: :input, place_holder: "" %></div>
			</div>
			<div class="misc-field">
				<div class="field-label">Favorite Movie <%= image_tag 'edit.svg', :class => "edit-svg" %></div>
				<div class="field-value"><%= best_in_place @user, :favorite_movie, type: :input, place_holder: "" %></div>
			</div>
			<div class="misc-field">
				<div class="field-label">Education <%= image_tag 'edit.svg', :class => "edit-svg" %></div>
				<div class="field-value"><%= best_in_place @user, :favorite_movie, type: :input, place_holder: "" %></div>
			</div>
		</div>
	</div>
</div>

<script>
$(document).ready(function(){
	$('.best_in_place').best_in_place()
})
</script>



